<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.online_shopping">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Online_Shopping">
        <activity
            android:name=".ui.DeleteCategoryActivity"
             />
        <activity
            android:name=".ui.EditCategoryActivity"
            />
        <activity
            android:name=".ui.DeleteProductActivity"
            />
        <activity
            android:name=".ui.EditProductActivity"
            />

        <activity android:name=".ui.addProduct" />
        <activity android:name=".ui.addCategory" />
        <activity
            android:name=".ui.PlaceOrderActivity"
            android:exported="false" />
        <activity
            android:name=".ui.BarChart"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".ui.GetAddressActivity"
            android:exported="false" />
        <activity
            android:name=".ui.RatingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.searchScan"
            android:exported="true" />
        <activity android:name=".ui.ResetPasswordActivity" />
        <activity android:name=".ui.UsernameActivity" />
        <activity android:name=".ui.jeweleryActivity" />
        <activity android:name=".ui.womenActivity" />
        <activity android:name=".ui.menActivity" />
        <activity android:name=".ui.ElecronicsActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.button_navigate"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>